<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".online.OnlineWebSelectActivity"
 >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/guanggao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

            </LinearLayout>

            <Button
                android:id="@+id/onlineweb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在线一区" />

            <Button
                android:id="@+id/onlineweb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在线二区" />

            <Button
                android:id="@+id/onlineweb3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在线三区"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <Button
                android:id="@+id/onlineweb4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在线四区"
                android:visibility="visible" />

            <Button
                android:id="@+id/onlineweb5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在线五区"
                android:visibility="visible" />

            <Button
                android:id="@+id/onlineweb6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在线六区"
                android:visibility="visible" />


        </LinearLayout>>
    </ScrollView>
